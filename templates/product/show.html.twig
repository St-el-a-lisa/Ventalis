{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="container">
    <h1 class="article-title">{{ product.name }}</h1>
    <hr>

    {{ product.description|raw }}

    <h3 class= "review-title mt-5"><span id="review-count">{{ product.reviews|length}}</span> Avis</h3>
    <hr>
    <div class="review-area mb-5">
     {{ form(reviewForm, {'attr': {'class': 'review-form'}})}}
    </div>



</div>

{% endblock %}

